{
    "extends": "../configs/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "..",
        "composite": true,
        "rootDir": "src",
        "sourceMap": true,
        "noUnusedLocals": false,
        "paths": {
            "@cofl/viper-file": [ "../src/viper-file" ]
        }
    },
    "include": [ "./**/*" ],
    "references": [
        { "path": "../src/viper" },
        { "path": "../src/viper-file" }
    ]
}
